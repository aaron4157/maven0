<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<!-- 配置說明:產生日誌; 註冊"hello" action 調用類別GreetAction.class; 回覆結果調用 GreetView.jsp-->
<struts>
	<constant name="struts.devMode" value="true"/>
	<package name="idv.aaron4157" namespace="/" extends="struts-default">
	<!-- /root -->
		<action name="root">
            <result>/index.jsp</result>
        </action>
	<!-- /hello?name=? -->
		<action name="hello" class="idv.aaron4157.model.GreetAction" method="execute">
			<result name="success">/greetView.jsp</result>
			<result name="error">/index.jsp</result>
		</action>
		<action name="msg" class="idv.aaron4157.controller.Messenger" method="heading">
			<result name="success"></result>
		</action>
	</package>
	
</struts>