<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
	<!-- 自動掃描web包 ,將帶有註解的類 納入spring容器管理 --> 
<!-- 	<context:component-scan base-package="idv.aaron4157.databse"></context:component-scan>  -->
	<!-- Spring 框架 在這裡實現JDBCtemplate為一個bean工廠 -->
	<!-- B0部屬一個domain 存放訊息 有需要在這裡切換對應-->
	<bean id="message" class="idv.aaron4157.message.CHTMsgDomain"/>
	<!-- B1部署一個domain 給DAO操作 -->
	<bean id="cust" class="idv.aaron4157.database.CustomerDomain"/>
	<!-- B2部署DataSource物件on SQL server -->
	<bean id="datasrc" class="com.microsoft.sqlserver.jdbc.SQLServerDataSource">
		<!-- Property Injection 分欄寫 一行寫完也是可以 -->
		<property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
		<property name="url" value="jdbc:sqlserver://localhost;"/>
		<property name="user" value="admin"/>
		<property name="password">
			<value>888888</value>
		</property>
		<property name="databaseName">
			<value>BikeStores</value>
		</property>
	</bean>
	<!-- B3規劃Jdbc Template 依賴上面定義的datasrc ...IoC注入控制反轉-->
	<bean id="jdbc" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="message" ref="msg"></property>
		<!-- 屬性注入DataSource物件 進行IoC注入控制反轉 -->
		<property name="dataSource" ref="datasrc"/>
	</bean>

</beans>